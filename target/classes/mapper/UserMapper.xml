<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cn.wbg.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.cn.wbg.entity.User">
        <id property="userid" column="userid" jdbcType="INTEGER"/>
        <result property="usercode" column="usercode" jdbcType="VARCHAR"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="userpassword" column="userpassword" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        userid,usercode,username,
        userpassword
    </sql>
    <insert id="register" parameterType="user">
    insert into USER (username,userpassword,usercode)
        values(#{username},#{userpassword},#{usercode})
    </insert>
    <select id="queryUsernameInteger" resultType="java.lang.Integer" parameterType="string">
        select count(1) from USER where usercode = #{usercode}
    </select>
</mapper>
